---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}
    requires:
      - name: {{appName}}-db

{{^isMultitenant}}
  - name: {{appName}}-db-deployer
    type: hdb
    path: {{& db.path}}
    parameters:
      buildpack: nodejs_buildpack
{{#isJava}}
    build-parameters:
      builder: custom
      commands:
        - npm run build
{{/isJava}}
    requires:
      - name: {{appName}}-db
{{/isMultitenant}}

{{#isMultitenant}}
  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: {{appName}}-db
{{/isMultitenant}}

resources:
  - name: {{appName}}-db
    {{^isMultitenant}}
    type: com.sap.xs.hdi-container
    parameters:
      service: hana
      service-plan: hdi-shared
    {{/isMultitenant}}
    {{#isMultitenant}}
    type: org.cloudfoundry.managed-service
    parameters:
      service: service-manager
      service-plan: container
    {{/isMultitenant}}
