<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="my.project1.controller.Preview"
>
    <Page
        id="_IDGenPage1"
        title="Preview Page"
        titleAlignment="Center"
    >
        <core:HTML
            class="htmledit"
            id="_IDGenText1"
            content="{viewModel>/decodedData}"
        />

        <Bar id="_IDGenBar1">
            <contentRight>
                <Button
                    id="_IDGenButton1"
                    text="Download"
                    icon="sap-icon://download"
                    press="onDownloadPress"
                    type="Ghost"
                />
                <Button
                    id="_IDGenButton2"
                    text="Print"
                    icon="sap-icon://print"
                    press="onPrintPress"
                    type="Ghost"
                />
            </contentRight>
        </Bar>
    </Page>
</mvc:View>
