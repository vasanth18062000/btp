<mvc:View
    controllerName="ns.proposalsystem.controller.PreviewForm"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page>
        <Bar>
            <contentMiddle>
                <Title
                    text="MainSection Details"
                    level="H1"
                    titleStyle="H3"
                />
            </contentMiddle>
        </Bar>

        <VBox>
            <Panel headerText="Main Section Title">
                <ObjectAttribute
                    class="bigFont"
                    text="{mainSectiontitle}"
                />
            </Panel>
            <Panel headerText="Text Area">
                <core:HTML
                    class="htmledit"
                    content="{main>/key3}"
                />
            </Panel>
        </VBox>

        <Bar>
            <contentLeft>
                <Title
                    text="Image Preview :"
                    level="H3"
                />
            </contentLeft>
        </Bar>

        <FlexBox
            class="image"
            justifyContent="Center"
            alignItems="Center"
        >
            <VBox id="previewImageContainer" />
        </FlexBox>

        <Bar>
            <contentMiddle>
                <Title
                    text="SubSection Details"
                    level="H1"
                    titleStyle="H3"
                />
            </contentMiddle>
        </Bar>

        <VBox>
            <Panel headerText="Sub Section Title">
            <List >
            <ObjectListItem >
                <ObjectAttribute
                    class="bigFont"
                    text="{sub>/subSectiontitle}"
                /> 
                </ObjectListItem>
                </List>
            </Panel>
            <Panel headerText="Sub Text Area">
                <core:HTML
                    class="htmledit"
                    content="{sub>/decodedtextkey3}"
                />
            </Panel>
        </VBox>

        <Bar id="_IDGenBar1">
            <contentRight>
                <Button
                    id="_IDGenButton1"
                    text="Download Page"
                    icon="sap-icon://download"
                    press="onDownloadPress"
                    type="Ghost"
                />
                <!-- <Button
                    id="_IDGenButton2"
                    text="Print"
                    icon="sap-icon://print"
                    press="onPrintPress"
                    type="Ghost"
                /> -->
            </contentRight>
        </Bar>
    </Page>
</mvc:View>
